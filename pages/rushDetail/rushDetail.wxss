.container { padding: 24rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; }
.title { font-size: 32rpx; font-weight: 600; margin-bottom: 12rpx; }
.line { color: #666; margin-top: 6rpx; }
.actions { margin-top: 20rpx; display: flex; flex-direction: column; gap: 12rpx; }
.btn { background: #0a7cff; color: #fff; }
.warn { background: #ff9f1a; }
.danger { background: #ff4d4f; }
.participants { display: flex; flex-wrap: wrap; gap: 20rpx; margin-top: 16rpx; }
.participant-item { display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.participant-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; }
.participant-name { font-size: 24rpx; color: #333; }
